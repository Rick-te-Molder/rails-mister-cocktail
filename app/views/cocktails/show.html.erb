<h1><%= @cocktail.name %></h1>
<p><%= link_to "edit name", edit_cocktail_path(@cocktail) %>
  <%= link_to "delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<h2>Ingredients</h2>

<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %>
    <%= dose.ingredient.name %>
  <%= link_to "delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
  <% end %>
<br>
<p><%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "back to our cocktails", cocktails_path %></p>
