<h1><%= @cocktail.name %></h1>
<br>
<h2>Ingredients</h2>
<% @cocktail.ingredients.each do |ingredient| %>
  <p> <%= ingredient.name %> </p>
  <% end %>
<br>
<p><%= link_to "edit", edit_cocktail_path(@cocktail) %></p>
<p><%= link_to "delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "back to our cocktails", cocktails_path %></p>
