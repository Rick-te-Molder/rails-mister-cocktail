<h1><%= @cocktail.name %></h1>
<p><%= link_to "edit cocktail name", edit_cocktail_path(@cocktail) %></p>
<p><%= link_to "delete cocktail", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<h2>Ingredients</h2>

<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.ingredient.name %> </p>
  <p> <%= dose.description %> </p>
  <p><%= link_to "delete ingredient", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
  <% end %>
<br>
<p><%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %></p>
<br>
<p><%= link_to "back to our cocktails", cocktails_path %></p>
